{
  "name": "npx-webpack",
  "version": "1.0.0",
  "description": "Node 8.2+ support npx webpack command",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "clean:test": "rm -rf ./test/dist/*",
    "product:details": "cross-env NODE_ENV=production webpack --mode=production --config build/webpack.prod.conf.js --progress --display-modules --colors --display-reasons",
    "product": "cross-env NODE_ENV=production webpack --mode=production --config build/webpack.prod.conf.js --progress --colors",
    "build": "npm run clean && npm run product",
    "dev": "cross-env NODE_ENV=development node ./scripts/dev-server.js",
    "test:dev": "npm run clean:test && cross-env NODE_ENV=development npx webpack --mode=development",
    "test:prod": "npm run clean:test && cross-env NODE_ENV=production npx webpack --mode=production",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,vue,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goddancer/webpack-cli/npx-webpack"
  },
  "keywords": [
    "npx",
    "webpack",
    "npm-webpack"
  ],
  "author": "goddancer",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@youyu/authenticate": "^1.0.0",
    "border-1px.less": "^1.0.0",
    "es6-promise": "^4.2.5",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "vue": "^2.5.17",
    "vuex": "^3.0.1",
    "whatwg-fetch": "^3.0.0",
    "zjc-object-assign": "^1.0.5"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-component": "^1.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.17.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-withimg-loader": "^0.1.16",
    "husky": "^1.2.0",
    "image-webpack-loader": "^4.5.0",
